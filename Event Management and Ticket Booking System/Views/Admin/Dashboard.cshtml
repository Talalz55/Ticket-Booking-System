@model AdminDashboardViewModel

<h2>Admin Dashboard</h2>

<h3>Users</h3>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <!-- Additional actions such as disable or delete can be added -->
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Events</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Public</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model.Events)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Date.ToString("g")</td>
                <td>@eventItem.IsPublic ? "Yes" : "No"</td>
                <td>
                    <a asp-action="EditEvent" asp-route-id="@eventItem.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteEvent" asp-route-id="@eventItem.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
