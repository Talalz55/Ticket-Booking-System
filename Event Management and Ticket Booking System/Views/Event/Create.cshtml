@using Event_Management_and_Ticket_Booking_System.Models.Entities
@using Event_Management_and_Ticket_Booking_System.Models.ViewModels
@model Event
@{
    ViewData["Title"] = "Create Event";
}

<h2 class="page-title">Create Event</h2>

@using (Html.BeginForm("Create", "Event", FormMethod.Post))
{
    <div class="form-container">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-textarea", rows = 5 })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Category, htmlAttributes: new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Category, new SelectList(Enum.GetValues(typeof(EventCategory))), "-- Select Category --", new { @class = "form-select" })
            @Html.ValidationMessageFor(m => m.Category, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Venue, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Venue, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Venue, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-input", type = "date" })
            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BasePrice, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.BasePrice, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.BasePrice, "", new { @class = "form-error" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TotalSeats, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.TotalSeats, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.TotalSeats, "", new { @class = "form-error" })
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
}
