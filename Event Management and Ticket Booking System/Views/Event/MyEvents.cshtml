@model IEnumerable<Event_Management_and_Ticket_Booking_System.Models.Entities.Event>

<h2>My Events</h2>

@if (!Model.Any())
{
    <p>You have not created any events yet.</p>
    <a asp-action="Create" class="btn btn-primary">Create an Event</a>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date</th>
                <th>Venue</th>
                <th>Available Seats</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model)
            {
                <tr>
                    <td>@eventItem.Name</td>
                    <td>@eventItem.Category</td>
                    <td>@eventItem.Date.ToString("MM/dd/yyyy")</td>
                    <td>@eventItem.Venue</td>
                    <td>@eventItem.AvailableSeats</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@eventItem.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary mt-3">Create New Event</a>
}
