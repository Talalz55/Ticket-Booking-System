@model IEnumerable<Event>

<h2>Event Listing</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Public</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Date.ToString("g")</td>
                <td>@eventItem.IsPublic ? "Yes" : "No"</td>
            </tr>
        }
    </tbody>
</table>
