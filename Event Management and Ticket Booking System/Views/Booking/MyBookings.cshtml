@model IEnumerable<Event_Management_and_Ticket_Booking_System.Models.Entities.Ticket>

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>You have no bookings yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Venue</th>
                <th>Ticket Type</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Event.Name</td>
                    <td>@ticket.Event.Date.ToString("MM/dd/yyyy")</td>
                    <td>@ticket.Event.Venue</td>
                    <td>@ticket.Type</td>
                    <td>@ticket.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
